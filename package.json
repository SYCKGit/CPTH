{
  "name": "cp-template-helper",
  "displayName": "CP Template Helper",
  "description": "A Visual Studio Code Extension to help with your competitive programming templates",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SYCKGit/CPTH"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [ "Snippets" ],
  "contributes": {
    "jsonValidation": [
      {
        "fileMatch": "cpth.config.json",
        "url": "./contributes/config.schema.json"
      }
    ],
    "snippets": [
      {
        "language": "cpp",
        "path": "./contributes/snippets.json"
      }
    ]
  },
  "activationEvents": [
    "workspaceContains:cpth.config.json"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "ts-loader": "^9.5.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
